package w9_gissaTalet;

import java.util.Random;
import java.util.Scanner;

public class Gissa_talet {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int points = 0;
		System.out.println("Välkommen till gissa talet \n"
				+ "Välj svårighetsgrad: \n"
				+ "1 = Lätt \n"
				+ "2 = Medel \n"
				+ "3 = Svår");
		int guesses = 0;
		int multiplier = 0;
		int s = input.nextInt();
		switch(s) {
			case 1:
				guesses = 7;
				multiplier = 1;
				System.out.println(
						"\n Slumpat tal är mellan 1-100\r\n" + 
						"Antal gissningar är 7\r\n" + 
						"Poäng för rätt är 1\r\n");
				break;
			case 2:
				guesses = 5;
				multiplier = 3;
				System.out.println(
						"\n Slumpat tal är mellan 1-100\r\n" + 
						"Antal gissningar är 5\r\n" + 
						"Poäng för rätt är 3");
				break;
			case 3:
				guesses = 3;
				multiplier = 5;
				System.out.println( 
						"\n Slumpat tal är mellan 1-100\r\n" + 
						"Antal gissningar är 3\r\n" + 
						"Poäng för rätt är 5");
				break;
			default:
				System.out.println("\n error");
		}
		Random rand = new Random();
		int goal = rand.nextInt(100) + 1;
		while(guesses > 0) {
			System.out.println("\n Gissa talet!");
			int guess = input.nextInt();
			guesses--;
			if(guess == goal) {
				goal = rand.nextInt(100) + 1;
				points=+ multiplier;
			}
			else {
				if(guess > goal) {
					System.out.println("\n TALET ÄR HÖGRE ");
				}
				else {
					System.out.println("\n TALET ÄR LÄGRE ");
				}
			}
		}
		System.out.println("DU FÖRLORADE \n"
				+ "ANTAL POÄNG: " + points);
		input.close();
	}
}
