<Window x:Class="Template.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="800">
    <Grid Margin="20px">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="20px"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Dummy" x:Name="StudentInfoBlock" Grid.Column="2" Grid.Row="0" Grid.RowSpan="4"></TextBlock>
        <TextBox Text="Student Name" x:Name="NameBox" Grid.Column="0" Grid.Row="0"></TextBox>
        <TextBox Text="Student Roll No." x:Name="RollNoBox" Grid.Column="0" Grid.Row="1"></TextBox>
        <Button Content="Update Information" Grid.Column="0" Grid.Row="3" Click="UpdateInfo"></Button>
    </Grid>
</Window>
